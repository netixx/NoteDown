<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.enst.infsi351.notedown" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainMenuActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_main_menu"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SideBySideActivity"
            android:label="@string/title_activity_side_by_side" >
        </activity>
        <activity
            android:name=".CutActivity"
            android:label="@string/title_activity_cut" >
        </activity>
        <activity
            android:name=".NotesOnlyActivity"
            android:label="@string/title_activity_notes_only" >
        </activity>
    </application>

</manifest>
