<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#0099cc"
    tools:context="fr.enst.infsi351.notedown.MainMenuActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:focusable="false"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.2"
            android:background="#1166aa"
            android:gravity="center_horizontal"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
            android:padding="5dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="fill_horizontal"
            android:measureWithLargestChild="false"
            android:nestedScrollingEnabled="false"
            android:layout_weight="0.8"
            android:baselineAligned="false">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="100dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="@string/new_doc_ou_new_file"
                    android:id="@+id/textView2"
                    android:layout_weight="1"
                    style="@style/Base.TextAppearance.AppCompat.Headline"
                    android:elegantTextHeight="false"
                    android:editable="false"
                    android:gravity="center" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="@string/side_by_side"
                    android:id="@+id/button"
                    android:onClick="setPDFActivity"
                    android:layout_weight="1"
                    style="@style/Base.TextAppearance.AppCompat.Large" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="@string/cut"
                    android:id="@+id/button2"
                    android:layout_weight="1"
                    style="@style/Base.TextAppearance.AppCompat.Large" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="@string/blank"
                    android:id="@+id/button3"
                    android:layout_weight="1"
                    style="@style/Base.TextAppearance.AppCompat.Large" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="100dp">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/file_open"
                    android:id="@+id/button4"
                    android:layout_weight="1"
                    style="@style/Base.TextAppearance.AppCompat.Large" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
